<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Type</th>
      <th>Amount</th>
      <th>Expense Category</th>
      <th>Title</th>
      <th>Status</th>
      <th>Mode</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td>
          <%= transaction.type.name %>
            <%# <img
                src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                alt=""
                style="width: 45px; height: 45px"
                class="rounded-circle"
                /> %>
        </td>
        <td>
          <div class="d-flex align-items-center">
            <div class="ms-3">
              <p class="fw-bold mb-1"><%= transaction.amount %></p>
              <%# <p class="text-muted mb-0">john.doe@gmail.com</p> %>
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal mb-1">Software engineer</p>
          <p class="text-muted mb-0">IT department</p>
        </td>
        <td><%= transaction.title %></td>
        <td>
          <% if transaction.status.name=="Complete" %>
            <span class="badge badge-success rounded-pill d-inline">Complete</span>
          <% elsif transaction.status.name=="Pending" %>
            <span class="badge badge-warning rounded-pill d-inline">Pending</span>
          <% else  %>
            <span class="badge badge-primary rounded-pill d-inline">Incomplete</span>
          <% end %>
        </td>
        <td><%= transaction.mode.name %></td>
        <td><%= transaction.description %></td>
        <td>
          <%= link_to "Edit",root_path, class:"btn btn-link btn-sm btn-rounded" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




<div class="d-flex justify-content-around mb-4">
  <%= link_to "Edit Category", edit_category_path(@category), class:"btn btn-primary" %>
  <%= link_to "Delete Category", category_path(@category), method: :delete, class:"btn btn-danger" %>
</div>

<h1>Sub Categories</h1>
<div class="input-group">
  <input type="text" class="form-control" id="inputField" value="Default value" readonly>
  <div class="input-group-append">
    <button class="btn btn-primary" type="button" id="edit-btn">Edit</button>
    <button class="btn btn-success" type="button" id="save-btn" style="display: none;">Save</button>
    <button class="btn btn-danger" type="button" id="cancel-btn" style="display: none;">Cancel</button>
  </div>
</div>
$(document).ready(function() {
  $('#edit-btn').click(function() {
    $('input[readonly]').prop('readonly', false);
    $('#edit-btn').hide();
    $('#save-btn, #cancel-btn').show();
  });
  
  $('#cancel-btn').click(function() {
    $('input[readonly]').prop('readonly', true);
    $('#edit-btn').show();
    $('#save-btn, #cancel-btn').hide();
  });
});
