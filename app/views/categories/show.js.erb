$(document).ready(function() {
  $('#edit-btn').click(function(e) {
    e.preventDefault();
    $('category[readonly]').prop('readonly', false);
    $('#edit-btn').hide();
    $('#save-btn, #cancel-btn').show();
  });
  
  $('#cancel-btn').click(function(e) {
    e.preventDefault();
    $('input[readonly]').prop('readonly', true);
    $('#edit-btn').show();
    $('#save-btn, #cancel-btn').hide();
  });

  $("#save-btn").click(function(e) {
    e.preventDefault(); 

    $.ajax({
      url: "/some/ajax/url",
      method: "POST",
      data: { some: "data" },
      success: function(response) {
        console.log("Success!");
        console.log(response);
      },
      error: function(xhr, status, error) {
        console.log("Error!");
        console.log(error);
      }
    });
  });
});
