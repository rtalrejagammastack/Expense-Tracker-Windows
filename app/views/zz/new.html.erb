<h1 class="text-center mb-4"> New Transaction </h1>
<div class="d-flex justify-content-around mb-4">
  <% if @user_category %>
    <% @transaction_types.each do |type| %>
      <%= link_to type.name, new_user_category_transaction_path(@user_category, type: type.name), class:"btn btn-primary" %>
    <% end %>
  <% else %>
    
    <% @transaction_types.each do |type| %>
      <%= link_to type.name, new_transaction_path(type: type.name), class:"btn btn-primary" %>
    <% end %>
  <% end %>
</div>

<% if @valid_type  %>
  <%= render partial:'form' , locals:{ transaction: @transaction, type: @valid_type }  %>
<% elsif params[:type]==nil %>

<% else %>
  <h1>Not a Right Type.</h1>
<% end  %>